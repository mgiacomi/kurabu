        <input type="hidden" name="quantity_<%= @session_count %>" value="1">

        <% if discount > 0 %>
            <input type="hidden" name="discount_amount_<%= @session_count %>" value="<%= discount > 250 ? 250 : discount  %>">
            <% discount = discount - 250 %>
        <% end %>

        <% @session_count = @session_count + 1 %>
    <% end %>
    <% if @signup.session5 == '1' %>
        <tr>
          <td><p style="margin-bottom:0;"><strong>Session 5:</strong></p></td>
          <td nowrap="nowrap" style="padding-right:10px;"><p style="margin-bottom:0;">July 23 - July 27</p></td>
          <td nowrap="nowrap" style="padding-right:10px;"><p style="margin-bottom:0;">M-F</p></td>
          <td nowrap="nowrap" style="padding-right:10px;"><p style="margin-bottom:0;"><span style="color: red; font-weight: bold;">$250</span></p></td>
        </tr>
        <input type="hidden" name="item_name_<%= @session_count %>" value="Session 5: July 23 - July 27">
        <input type="hidden" name="item_number_<%= @session_count %>" value="<%= @signup.cfname %> <%= @signup.clname %>">
        <input type="hidden" name="amount_<%= @session_count %>" value="250">
        <input type="hidden" name="quantity_<%= @session_count %>" value="1">

        <% if discount > 0 %>
            <input type="hidden" name="discount_amount_<%= @session_count %>" value="<%= discount > 249 ? 249 : discount  %>">
            <% discount = discount - 249 %>
        <% end %>

        <% @session_count = @session_count + 1 %>
    <% end %>
  </table>
  <br/>

  <% if @signup.payment.present? && @signup.payment.scholarship.to_f > 0 %>
      <p style="color:black;margin-bottom:10px;"><strong>Scholarship:</strong> <%= number_to_currency(@signup.payment.scholarship) %></p>
  <% end %>

  <% if @signup.payment.present? && @signup.payment.amount.to_f > 0 %>
